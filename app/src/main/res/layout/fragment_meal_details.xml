<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.fragment.meal.mealdetails.MealDetailsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rv_meal_details"
        tools:listitem="@layout/item_view_meal_details"
        tools:itemCount="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_add_to_cart"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_add_to_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_baseline_exposure_plus_1_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMin"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_baseline_exposure_neg_1_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_meal_count"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_meal_count"
            android:text="@string/zero"
            android:gravity="center"
            android:textSize="@dimen/_40sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/btnPlus"
            app:layout_constraintBottom_toBottomOf="@id/btnPlus"
            app:layout_constraintStart_toEndOf="@id/btnPlus" />
        <TextView
            android:layout_width="@dimen/_100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_total_price"
            android:text="@string/zero"
            android:gravity="center"
            style="@style/TextMealNameLarge"
            app:layout_constraintStart_toEndOf="@id/btnMin"
            app:layout_constraintTop_toTopOf="@id/btnAddToCart"
            app:layout_constraintBottom_toBottomOf="@id/btnAddToCart"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddToCart"
            android:text="@string/add_to_cart"
            android:background="@drawable/btn_background"
            style="@style/TextMealName"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_total_price"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
