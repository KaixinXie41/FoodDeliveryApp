<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender_message"
        android:layout_width="@dimen/_200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/sender_box"
        android:padding="@dimen/_15dp"
        android:text="@string/sender_message"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sp" />

    <TextView
        android:visibility="visible"
        android:id="@+id/receive_message"
        android:layout_width="@dimen/_200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/receiver_box"
        android:padding="@dimen/_15dp"
        android:text="@string/receiver_message"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sp" />


</RelativeLayout>