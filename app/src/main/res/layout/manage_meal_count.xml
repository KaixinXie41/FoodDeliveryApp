<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_add_to_cart"
    android:layout_margin="@dimen/_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_0dp"
        android:id="@+id/layout_add_meal_count"
        android:background="@drawable/background_add_to_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
                 <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_baseline_exposure_plus_1_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnMin"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_baseline_exposure_neg_1_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_meal_count"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_meal_count"
                    android:text="@string/zero"
                    android:gravity="center"
                    android:textSize="@dimen/_20sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/btnPlus"
                    app:layout_constraintBottom_toBottomOf="@id/btnPlus"
                    app:layout_constraintStart_toEndOf="@id/btnPlus" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background_add_to_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddToCart"
            android:text="@string/add_To_Cart"
            android:textSize="@dimen/_20sp"
            android:layout_margin="@dimen/_10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_total_price"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_30dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_total_price"
            android:text="@string/zero"
            android:textSize="@dimen/_20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_20dp"
            app:layout_constraintTop_toTopOf="@id/btnAddToCart"
            app:layout_constraintBottom_toBottomOf="@id/btnAddToCart"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>