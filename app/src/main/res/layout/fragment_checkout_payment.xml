<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.checkout.checkout.CheckoutPaymentFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_select_payment"
        android:text="@string/select_payment"
        style="@style/TextMealNameLarge"
        android:textSize="@dimen/_20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:id="@+id/cardView_cash_on_delivery"
        app:layout_constraintTop_toBottomOf="@id/txt_select_payment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/rtn_cod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/radio_payment_1"
            style="@style/TextMealName"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_cash" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:id="@+id/img_cash"
            android:src="@drawable/cash"
            app:layout_constraintTop_toTopOf="@id/rtn_cod"
            app:layout_constraintBottom_toBottomOf="@id/rtn_cod"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView_cash_on_delivery_info"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rtn_cod">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cod_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:text="@string/pay"
                android:textSize="@dimen/_30sp" />


        </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_paypal"
        android:layout_margin="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/cardView_cash_on_delivery"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <RadioButton
                 android:id="@+id/rtn_paypal"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="@string/radio_payment_2"
                 style="@style/TextMealName"
                 android:textStyle="bold"
                 android:fontFamily="casual"
                 android:gravity="center"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/img_paypal"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:id="@+id/img_paypal"
                android:src="@drawable/paypal_icon_png"
                app:layout_constraintTop_toTopOf="@id/rtn_paypal"
                app:layout_constraintBottom_toBottomOf="@id/rtn_paypal"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView_paypal_qr_code"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rtn_paypal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_150dp"
                    android:id="@+id/img_paypal_qr_code"
                    android:src="@drawable/paypal"
                    android:layout_margin="@dimen/_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_paypal_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_background"
                    android:text="@string/pay"
                    android:textSize="@dimen/_30sp"
                    android:layout_marginBottom="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/img_paypal_qr_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_credit_card"
        android:layout_margin="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/cardView_paypal"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rtn_dc_cc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/radio_payment_3"
                style="@style/TextMealName"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_credit_card"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:id="@+id/img_credit_card"
            android:src="@drawable/credit_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardBackgroundColor="@color/lightYellow"
                android:id="@+id/cardView_credit_card_information"
                app:layout_constraintTop_toBottomOf="@id/img_credit_card"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_15dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_card_number"
                        android:text="@string/enter_card_number"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_card_number"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_card_number"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_card_date"
                        android:text="@string/enter_card_number"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_enter_card_number"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_card_date"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:gravity="center"
                        android:hint="@string/month_years"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_card_date"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_card_cvv"
                        android:text="@string/enter_card_number"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_enter_card_number"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_card_cvv"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_card_date"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_pay"
                android:layout_margin="@dimen/_10dp"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cardView_credit_card_information"
                android:text="@string/pay"
                android:background="@drawable/btn_background"
                android:textSize="@dimen/_25sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_gift_card"
        android:layout_margin="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/cardView_credit_card"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rtn_gift_card"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:text="@string/radio_payment_4"
                style="@style/TextMealName"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_gift_card" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:id="@+id/img_gift_card"
                android:src="@drawable/gift_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightYellow"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10dp"
                android:id="@+id/cardView_gift_card_information"
                app:layout_constraintTop_toBottomOf="@id/img_gift_card"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_15dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_gift_card_number"
                        android:text="@string/enter_card_number"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_gift_card_number"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_gift_card_number"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_gift_card_date"
                        android:text="@string/enter_card_number"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_enter_gift_card_number"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_gift_card_date"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:gravity="center"
                        android:hint="@string/month_years"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_gift_card_date"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_enter_gift_card_cvv"
                        android:text="@string/enter_card_cvv"
                        android:textSize="@dimen/_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_enter_gift_card_number"
                        app:layout_constraintStart_toStartOf="@id/edt_enter_gift_card_cvv"
                        app:layout_constraintEnd_toEndOf="@id/edt_enter_gift_card_cvv"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_gift_card_cvv"
                        android:background="@color/white"
                        android:textSize="@dimen/_30sp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_enter_gift_card_date"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_gift_pay"
                android:layout_margin="@dimen/_10dp"
                android:textColor="@color/white"
                android:text="@string/pay"
                android:visibility="gone"
                android:background="@drawable/btn_background"
                android:textSize="@dimen/_25sp"
                app:layout_constraintTop_toBottomOf="@id/cardView_gift_card_information"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>