<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.auth.profile.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="@android:color/black" />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_your_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:drawablePadding="@dimen/_10dp"
                android:fontFamily="casual"
                android:gravity="center|start"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp"
                android:textColor="@android:color/black"
                android:text="@string/your_order"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_bookmark_border_24" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_150dp"
            android:layout_gravity="start"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:paddingTop="@dimen/_5dp"
            android:text="@string/profile"
            android:textAppearance="@style/TextMealName"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_30sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="@string/name"
            style="@style/TextMealName"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_name"
            android:fontFamily="casual"
            android:textColorHint="@color/black"
            android:hint="@string/name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="casual"
            android:gravity="center|start"
            style="@style/TextMealName"
            android:layout_marginTop="@dimen/_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_email"
            android:textColorHint="@color/black"
            android:fontFamily="casual"
            android:hint="@string/email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:visibility="gone"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="@string/number"
            style="@style/TextMealName"
            android:layout_marginTop="@dimen/_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp" />

        <LinearLayout
            android:id="@+id/layout_change_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawablePadding="@dimen/_10dp"
                android:fontFamily="casual"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:id="@+id/text_change_number"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:text="@string/number"
                android:textSize="@dimen/_15sp"
                app:drawableEndCompat="@drawable/ic_baseline_edit_24" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="casual"
            android:gravity="center|start"
            style="@style/TextMealName"
            android:layout_marginTop="@dimen/_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp" />

        <LinearLayout
            android:id="@+id/layout_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawablePadding="@dimen/_10dp"
                android:fontFamily="casual"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:id="@+id/edit_mobile"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:textSize="@dimen/_15sp"
                android:hint="@string/mobile"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_edit_24" />
        </LinearLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:fontFamily="casual"
            android:text="@string/label_update"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/black" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>